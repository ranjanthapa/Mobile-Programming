<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/sandwich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Sandwich"/>
        <Button
            android:id="@+id/salad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sandwich"
            android:layout_margin="10dp"
            android:text="Salad"/>
        <Button
            android:id="@+id/snacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/salad"
            android:layout_margin="10dp"
            android:text="Snacks"/>
    </RelativeLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="Deprecated">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_x="120dp"
            android:layout_y="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greek Salad"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bafal, Kathmandu"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrilltheWay Cafe"
                android:textSize="12dp"

                android:textColor="@android:color/darker_gray"
                />
        </LinearLayout>
    </AbsoluteLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:stretchColumns="1"
        android:divider="@android:color/black"
        android:showDividers="end">

        <TableRow
            android:background="@android:color/darker_gray"
            android:padding="1dp">
            <TextView
                android:layout_column="1"
                android:text="Name"
                android:padding="5dp"
                android:background="@android:color/white"/>
            <TextView
                android:text="Address"
                android:padding="5dp"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Ranjan Thapa"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="1dp"/>
            <TextView
                android:text="Bafal, Kathmandu"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="1dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Lionel Andress Messi"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="1dp"/>
            <TextView
                android:text="Inter Miami, USA"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="1dp"/>
        </TableRow>

    </TableLayout>


</LinearLayout>
